}

export interface KonamiCode {
  sequence: string[]
  currentIndex: number
  timeoutId?: number
  lastKeyTime?: number
  unlocked: boolean
  reward?: {
    type: 'theme' | 'feature' | 'easter-egg'
    id: string
  }
  isUnlocked: boolean
}
