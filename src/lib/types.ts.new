export interface Project {
  id: string
  title: string
  description: string
  technologies: string[]
  image: string
  githubUrl?: string
  liveUrl?: string
  category: 'cybersecurity' | 'ai' | 'web'
}

export interface Service {
  id: string
  title: string
  description: string
  icon: string
  features: string[]
  category: 'ai' | 'cybersecurity'
}

export interface Testimonial {
  id: string
  name: string
  role: string
  company: string
  content: string
  avatar?: string
  rating: number
}

export interface CaseStudy {
  id: string
  title: string
  excerpt: string
  content: string
  publishedAt: string
  author: {
    name: string
    avatar?: string
  }
  tags: string[]
  metrics?: {
    label: string
    value: string
    description?: string
  }[]
  testimonial?: {
    quote: string
    author: string
    role?: string
    company?: string
  }
  images?: {
    url: string
    alt: string
    caption?: string
  }[]
}

export interface BlogPost {
  id: string
  title: string
  excerpt: string
  content: string
  publishedAt: string
  author: {
    name: string
    image?: string
  }
  tags: string[]
  image?: string
  readingTime: string
}

export interface AnimationConfig {
  duration?: number
  delay?: number
  ease?: string
  type?: 'spring' | 'tween' | 'inertia'
  stiffness?: number
  damping?: number
  mass?: number
}

export interface InteractiveElementProps {
  glowOnHover?: boolean
  soundOnHover?: boolean
  animationConfig?: AnimationConfig
  customGlowColor?: string
  glowIntensity?: number
}

export interface MousePosition {
  x: number
  y: number
}

export interface GlowingElementConfig {
  baseColor: string
  glowColor: string
  intensity: number
