  mouseDistance: number
  pulseSpeed?: number
  maxIntensity?: number
  minIntensity?: number
}

export interface MatrixRainConfig {
  characters: string
  speed: number
  density: number
  color: string
  opacity: number
  fontSize?: string
  fontFamily?: string
  glowEffect?: boolean
  randomizeSpeed?: boolean
}

export interface ContactForm {
  name: string
  email: string
  subject: string
  message: string
}

export interface LeadMagnetForm {
  email: string
  name?: string
}

export interface PricingTier {
  id: string
  name: string
  price: string
  description: string
  features: string[]
  recommended?: boolean
  cta: string
}

export interface GameState {
  isPlaying: boolean
  score: number
  level: number
  hints: number
  timeElapsed: number
  difficulty: 'easy' | 'medium' | 'hard'
  powerUps: string[]
  achievements: string[]
  lastCheckpoint?: {
    level: number
    score: number
    time: number
  }
}

export interface GameConfig {
  soundEnabled: boolean
  particleEffects: boolean
  difficulty: 'easy' | 'medium' | 'hard'
  theme: 'matrix' | 'cyber' | 'classic'
  controlScheme: 'arrows' | 'wasd' | 'custom'
  customControls?: Record<string, string>
}

export interface Terminal {
  command: string
